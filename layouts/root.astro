---
import "@/styles/globals.scss";
import Meta from "@/components/meta.astro";
import Navigation from "@/components/navigation.astro";
import Footer from "@/components/footer.astro";

interface Props {
  meta: {
    title?: string;
    description?: string;
    image?: {
      src: string;
      alt?: string;
    };
  };
}

const { meta } = Astro.props;
---

<script>
  import "../scripts/globals";
</script>

<html
  lang="en"
  class="bg-background text-muted-foreground font-sans antialiased scroll-smooth"
>
  <Meta {meta} />
  <body>
    <div id="app" class="relative flex flex-col min-h-screen" x-data="app">
      <Navigation {meta} />
      <slot />
      <Footer />
    </div>
  </body>
</html>
